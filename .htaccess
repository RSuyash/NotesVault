<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /notesvault-web/

  # Optional: Redirect HTTP to HTTPS (Uncomment if needed)
  # RewriteCond %{HTTPS} off
  # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # --- API Rule (Relative to RewriteBase) ---
  # Do not rewrite requests for the API directory within notesvault-web
  RewriteRule ^api/ - [L]

  # --- React App Rule ---
  # If the request is NOT for an existing file within this directory
  RewriteCond %{REQUEST_FILENAME} !-f
  # And the request is NOT for an existing directory within this directory
  RewriteCond %{REQUEST_FILENAME} !-d
  # Then rewrite the request (relative to RewriteBase) to index.html
  RewriteRule ^ index.html [L]

  # Note: Requests for existing files/directories (like /api/*, /notesvault/assets/*, /notesvault/logo.png)
  # will not match the RewriteCond conditions above and will be served directly by Apache.
  # The ^api/ rule above explicitly prevents API requests from being rewritten.

</IfModule>